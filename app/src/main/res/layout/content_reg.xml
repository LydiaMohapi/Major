<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_reg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="programming.mobile.uj.ac.za.tertiary_explore.RegActivity"
    tools:showIn="@layout/app_bar_reg">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true">

        <Space
            android:layout_width="match_parent"
            android:layout_height="17dp" />
        <View
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_height="2dp"></View>
        <Space
            android:layout_width="match_parent"
            android:layout_height="26dp" />

        <TextView
            android:text="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/txtRegName"
            android:layout_weight="0.00" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="22dp" />
        <View
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_height="2dp"></View>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <TextView
            android:text="Surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/txtRegSurname"
            android:layout_weight="0.00" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="22dp" />
        <View
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_height="2dp"></View>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:text="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/txtRegEmail"
            android:layout_weight="0.00" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="22dp" />
        <View
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_height="2dp"></View>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:text="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/txtRegPassword"
            android:layout_weight="0.00" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="22dp" />
        <View
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_height="2dp"></View>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:text="Province"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/txtDropDown"
            android:layout_weight="0.00" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="22dp" />
        <View
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_height="2dp"></View>
        <Space
            android:layout_width="match_parent"
            android:layout_height="22dp" />

        <Button
            android:text="Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnReg" />


    </LinearLayout>
</RelativeLayout>
